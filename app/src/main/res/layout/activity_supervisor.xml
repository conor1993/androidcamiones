<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.manueli.siscam.Supervisor"
    android:background="#282828"
    android:icon="@mipmap/ic_launcher"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:padding="5dp">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#282828"
            android:id="@+id/linearLayout1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Escriba unidad o seleccione ruta"
                android:typeface="sans"
                android:textSize="20sp"
                android:textColor="#00aa55"
                android:textStyle="bold"
                android:gravity="left"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp"
                android:id="@+id/linearLayout31"
                android:weightSum="1">

                <EditText
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:hint="Unidad"
                    android:textColor="#ffffff"
                    android:lines="1"
                    android:textColorHint="#ffffff"
                    android:textStyle="bold"
                    android:background="#5d5d5d"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/edtUnidad"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:drawablePadding="10dp"
                    android:paddingLeft="15dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/imgButtonUnidad"
                    android:layout_alignEnd="@+id/imgButtonUnidad"
                    android:focusable="true"
                    android:focusableInTouchMode="true"

                    android:inputType="textCapCharacters"/>


                <Spinner
                    android:id="@+id/spRutas"
                    android:layout_width="384dp"
                    android:layout_height="55dp"
                    android:spinnerMode="dropdown"
                    android:hint="Rutas"
                    android:textSize="20sp"
                    android:textColor="#FAFAFA"
                    android:textColorHint="#ffffff"
                    android:background="@android:drawable/btn_dropdown"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:popupBackground="#FFFFFF"  />
                <!---
                <EditText
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:hint="Unidad"
                    android:textColor="#ffffff"
                    android:lines="1"
                    android:textColorHint="#ffffff"
                    android:textStyle="bold"
                    android:background="#5d5d5d"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/edtUnidad2"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:drawablePadding="10dp"
                    android:paddingLeft="15dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/imgButtonUnidad"
                    android:layout_alignEnd="@+id/imgButtonUnidad"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>
                  -->
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:src="@android:drawable/ic_menu_search"
                tools:ignore="contentDescription"
                android:layout_gravity="left"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/btnCambiar"
                android:text="Siguiente..."
                android:background="@drawable/red_button"
                style="@style/button_text" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Posicion ubicada"
                android:typeface="sans"
                android:textSize="20sp"
                android:textColor="#00aa55"
                android:textStyle="bold"
                android:gravity="left"/>
            <EditText
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="Posicion"
                android:textColor="#ffffff"
                android:lines="1"
                android:textColorHint="#ffffff"
                android:textStyle="bold"
                android:background="#5d5d5d"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/edtPosicion"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:paddingLeft="15dp"
                android:maxLines="1"
                android:layout_alignParentTop="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="number"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad de personal"
                android:typeface="sans"
                android:textSize="20sp"
                android:id="@+id/txtCantidad"
                android:textColor="#00aa55"
                android:textStyle="bold"
                android:gravity="left"/>
            <EditText
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="Cantidad"
                android:textColor="#ffffff"
                android:lines="1"
                android:textColorHint="#ffffff"
                android:textStyle="bold"
                android:background="#5d5d5d"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/edtCantidad"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:paddingLeft="15dp"
                android:maxLines="1"
                android:layout_alignParentTop="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="number"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="#282828"
                android:id="@+id/linearLayout4"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:weightSum="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/IdBoton"
                    android:text="Llegó"
                    android:background="@drawable/red_button"
                    style="@style/button_text"
                    android:layout_weight="3.18" />

            </LinearLayout>




        </LinearLayout>
    </ScrollView>

</RelativeLayout>
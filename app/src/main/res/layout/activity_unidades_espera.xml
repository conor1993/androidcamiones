<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.manueli.siscam.UnidadesEspera"
    android:background="#282828"
    android:icon="@mipmap/ic_launcher"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:padding="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:background="#282828"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp"
                android:id="@+id/linearLayout2"
                android:weightSum="1"            >
                <EditText
                    android:layout_width="235dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:hint="Codigo Unidad"
                    android:textColor="#ffffff"
                    android:lines="1"
                    android:textColorHint="#ffffff"
                    android:textStyle="bold"
                    android:background="#5d5d5d"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/edtUnidad"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:drawablePadding="10dp"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/imgButtonUnidad"
                    android:layout_alignEnd="@+id/imgButtonUnidad"
                    android:layout_weight="1.13"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#282828"
                    android:id="@+id/imgButtonUnidad"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:padding="2dp"
                    android:layout_margin="8dp"
                    android:src="@android:drawable/ic_menu_search"
                    tools:ignore="contentDescription"
                    android:layout_gravity="right"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N° Eco:                   Modelo:"
                android:typeface="sans"
                android:textSize="20sp"
                android:textColor="#00aa55"
                android:textStyle="bold"
                android:gravity="left"
                android:id="@+id/TvDescripcion"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placas:"
                android:typeface="sans"
                android:textSize="20sp"
                android:textColor="#00aa55"
                android:textStyle="bold"
                android:gravity="left"
                android:id="@+id/TvPlacas"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:padding="0dp"
                android:id="@+id/linearLayout3"
                android:weightSum="1">
                <EditText
                    android:layout_width="235dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:hint="Codigo Chofer"
                    android:textColor="#ffffff"
                    android:lines="1"
                    android:textColorHint="#ffffff"
                    android:textStyle="bold"
                    android:background="#5d5d5d"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/edtUsuario"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:drawablePadding="10dp"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/imgButtonPersonal"
                    android:layout_alignEnd="@+id/imgButtonPersonal"
                    android:layout_weight="1.13"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#282828"
                    android:id="@+id/imgButtonPersonal"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:padding="2dp"
                    android:layout_margin="8dp"
                    android:src="@android:drawable/ic_menu_search"
                    tools:ignore="contentDescription"
                    android:layout_gravity="right"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="Mote de Chofer"
                android:textColor="#ffffff"
                android:lines="1"
                android:textColorHint="#ffffff"
                android:textStyle="bold"
                android:background="#5d5d5d"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/edtApodo"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:drawablePadding="10dp"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_alignParentTop="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N° Empleado:"
                android:typeface="sans"
                android:textSize="20sp"
                android:textColor="#00aa55"
                android:textStyle="bold"
                android:gravity="left"
                android:id="@+id/TvClave"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chofer:"
                android:typeface="sans"
                android:textSize="20sp"
                android:textColor="#00aa55"
                android:textStyle="bold"
                android:gravity="left"
                android:id="@+id/TvNombre"/>


            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Taller"
                            android:id="@+id/RbTaller"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textColor="#00aa55"
                            android:textSize="14sp"/>



                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mantenimiento"
                            android:id="@+id/RbServicio"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textColor="#00aa55"
                            android:textSize="14sp"
                            android:layout_column="5" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Administracion"
                    android:id="@+id/RbAdmin"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#00aa55"
                    android:textSize="14sp"
                    android:checked="false"
                    android:layout_column="4" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cuadro"
                            android:id="@+id/RbCuadro"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textColor="#00aa55"
                            android:textSize="14sp"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10/90"
                            android:id="@+id/RbSegCuadro"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textColor="#00aa55"
                            android:textSize="14sp"
                            android:checked="false"
                            android:layout_column="4" />



            </RadioGroup>

            <EditText
                android:id="@+id/edtTramite"
                android:textSize="20sp"
                android:hint="Motivo.."
                android:textColor="#ffffff"
                android:lines="3"
                android:textColorHint="#ffffff"
                android:textStyle="bold"
                android:background="#5d5d5d"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:drawablePadding="10dp"
                android:paddingLeft="15dp"
                android:maxLines="3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:inputType="textCapCharacters"
                android:minLines="2"
                android:scrollHorizontally="false"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:visibility="invisible"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/IdButton"
                android:text="Entrada"
                android:background="@drawable/red_button"
                style="@style/button_text"/>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.manueli.siscam.ProgramacionesDeServicios"
    android:background="#282828"
    android:icon="@mipmap/ic_launcher"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="#282828"
                android:id="@+id/linearLayout"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:weightSum="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="0dp"
                    android:id="@+id/linearLayout1"
                    android:weightSum="1">
                    <EditText
                        android:layout_width="235dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:hint="Codigo Unidad"
                        android:textColor="#ffffff"
                        android:lines="1"
                        android:textColorHint="#ffffff"
                        android:textStyle="bold"
                        android:background="#5d5d5d"
                        android:padding="5dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/edtUnidad"
                        android:scrollHorizontally="true"
                        android:ellipsize="end"
                        android:drawablePadding="10dp"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:layout_alignParentTop="true"
                        android:layout_alignRight="@+id/imgButtonUnidad"
                        android:layout_alignEnd="@+id/imgButtonUnidad"
                        android:layout_weight="1.13"
                        android:focusable="true"
                        android:focusableInTouchMode="true"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#282828"
                        android:id="@+id/imgButtonUnidad"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:padding="2dp"
                        android:layout_margin="8dp"
                        android:src="@android:drawable/ic_menu_search"
                        tools:ignore="contentDescription"
                        android:layout_gravity="right"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NÂ° Eco:                   Modelo:"
                    android:typeface="sans"
                    android:textSize="20sp"
                    android:textColor="#00aa55"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:id="@+id/TvNumModelo"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Placas:"
                    android:typeface="sans"
                    android:textSize="20sp"
                    android:textColor="#00aa55"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:id="@+id/TvPlacas"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:typeface="sans"
                    android:textSize="20sp"
                    android:textColor="#00aa55"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:id="@+id/TvPls"/>
                <LinearLayout
                    android:layout_width="382dp"
                    android:layout_height="67dp"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:id="@+id/linearLayowerut5"
                    android:weightSum="1">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Servicios:"
                        android:typeface="sans"
                        android:textSize="20sp"
                        android:textColor="#00aa55"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:id="@+id/TvPlaca23r23sDSD"/>


                    <Spinner
                        android:id="@+id/spServicios"
                        android:layout_width="384dp"
                        android:layout_height="41dp"
                        android:spinnerMode="dropdown"
                        android:hint="Servicios"
                        android:textSize="20sp"
                        android:textColor="#FAFAFA"
                        android:textColorHint="#ffffff"
                        android:background="@android:drawable/btn_dropdown"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_marginBottom="212dp" />

                </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:id="@+id/linearLayowerut634"
                        android:weightSum="1"
                        android:layout_weight="0.65"
                        android:padding="10dp"
                        android:background="#282828"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">



                        <CalendarView
                            android:id="@+id/calendarView"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            android:textColor="#00aa55"
                            android:dateTextAppearance="@android:style/TextAppearance.Large.Inverse"/>


                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:id="@+id/linearLayowerut6"
                            android:weightSum="1"
                            android:layout_weight="0.65"
                            android:padding="10dp"
                            android:background="#282828"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">
                            <EditText
                                android:id="@+id/edtObservacion"
                                android:hint="Observaciones.."
                                android:textColor="#ffffff"
                                android:lines="3"
                                android:textColorHint="#ffffff"
                                android:textStyle="bold"
                                android:background="#5d5d5d"
                                android:padding="5dp"
                                android:layout_marginTop="3dp"
                                android:ellipsize="end"
                                android:ems="5"
                                android:textSize="20sp"
                                android:drawablePadding="10dp"
                                android:paddingLeft="15dp"
                                android:maxLines="3"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:inputType="textCapCharacters"
                                android:minLines="3"
                                android:scrollHorizontally="false"
                                android:scrollbars="vertical"
                                android:singleLine="false" />


                        </LinearLayout>
                    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:padding="0dp"
            android:id="@+id/linearLayout3"
            android:weightSum="1">
            <Button
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/IdButton"
                android:text="Guardar"
                android:background="@drawable/red_button"
                style="@style/button_text"/>
        </LinearLayout>
            </LinearLayout>

</ScrollView>



    </RelativeLayout>